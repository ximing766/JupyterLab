/* OTA Flash Tool 样式定义 */

/* 主窗口样式 */
QMainWindow {
    background-color: #1e1e1e;
    color: #ffffff;
}

/* 标签样式 */
QLabel {
    font-size: 12px;
    color: #e0e0e0;
    margin: 2px 0;
    font-weight: 500;
}

/* 通用按钮样式 */
QPushButton {
    background-color: #4a90e2;
    color: white;
    border: none;
    padding: 12px 12px;
    border-radius: 4px;
    font-size: 11px;
    font-weight: 600;
    min-height: 16px;
}

QPushButton:hover {
    background-color: #357abd;
}

QPushButton:pressed {
    background-color: #2968a3;
}

/* Flash按钮样式 - 绿色 */
QPushButton#flash_btn {
    background-color: #4CAF50;
    color: white;
    font-weight: bold;
    border: none;
    border-radius: 5px;
    padding: 6px 12px;
    font-size: 11px;
}

QPushButton#flash_btn:hover {
    background-color: #45a049;
}

QPushButton#flash_btn:pressed {
    background-color: #3d8b40;
}

