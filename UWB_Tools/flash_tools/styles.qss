/* 下拉框样式 */
QComboBox {
    padding: 6px 10px;
    border: 1px solid #5a6268;
    border-radius: 3px;
    background-color: #2d2d2d;
    color: #ffffff;
    font-size: 12px;
    min-height: 18px;
}

QComboBox:hover {
    border-color: #2d7d87;
    background-color: #404040;
}

QComboBox:focus {
    border-color: #3a9ca8;
}

QComboBox::drop-down {
    width: 25px;
    border-left-width: 1px;
    border-left-color: #5a6268;
    border-left-style: solid;
    border-top-right-radius: 3px;
    border-bottom-right-radius: 3px;
    background-color: #5a6268;
}

QComboBox::down-arrow {
    border-left: 5px solid transparent;
    border-right: 5px solid transparent;
    border-top: 6px solid #e0e0e0;
    width: 0px;
    height: 0px;
    margin: 0;
}

QComboBox::down-arrow:hover {
    border-top-color: #2d7d87;
}

QComboBox QAbstractItemView {
    background-color: #2d2d2d;
    color: #ffffff;
    border: 1px solid #5a6268;
    font-size: 12px;
}

/* 进度条样式 */
QProgressBar {
    border: none;
    border-radius: 6px;
    text-align: center;
    background: #404040;
    color: white;
    font-weight: bold;
    font-size: 13px;
    padding: 0px;
    min-height: 20px;
}

QProgressBar::chunk {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0, stop:0 #00bfff, stop:1 #0080ff);
    border-radius: 6px;
    margin: 0px;
}

/* 对话框样式 */
QDialog {
    background-color: #2d2d2d;
    border: 1px solid #555555;
    border-radius: 10px;
    font-family: 'Microsoft YaHei UI', sans-serif;
}

QFrame#InfoFrame {
    background-color: #3d3d3d;
    border: 1px solid #555555;
    border-radius: 8px;
}

QLabel#LabelField {
    font-size: 13px;
    color: #ffffff;
    padding: 4px 0;
}

QLabel#ValueField {
    font-size: 13px;
    font-weight: 600;
    color: #87ceeb;
    font-family: 'Consolas', 'Courier New', monospace;
    background-color: #4a4a4a;
    padding: 4px 8px;
    border-radius: 5px;
}

QLabel#TotalSizeValue {
    font-size: 14px;
    font-weight: 700;
    color: #ff6b6b;
    font-family: 'Consolas', 'Courier New', monospace;
    background-color: #4a4a4a;
    padding: 4px 8px;
    border-radius: 5px;
}

/* 对话框按钮样式 */
QDialog QPushButton {
    font-size: 14px;
    font-weight: 600;
    border-radius: 6px;
    padding: 8px 20px;
    margin: 5px;
    border: none;
}

QPushButton#ConfirmButton {
    background-color: #38a169;
    color: white;
}

QPushButton#ConfirmButton:hover {
    background-color: #2f855a;
}

QPushButton#CancelButton {
    background-color: #a0aec0;
    color: white;
}

QPushButton#CancelButton:hover {
    background-color: #718096;
}